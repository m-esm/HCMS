    <link rel="stylesheet" href="~/Themes/Anzim/vendor/owl.carousel/assets/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Themes/Anzim/vendor/magnific-popup/magnific-popup.min.css">

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/Themes/Anzim/css/theme.css">
    <link rel="stylesheet" href="~/Themes/Anzim/css/theme-elements.css">
