    <script src="~/Themes/Anzim/vendor/jquery.lazyload/jquery.lazyload.min.js"></script>
    <script src="~/Themes/Anzim/vendor/isotope/jquery.isotope.min.js"></script>
    <script src="~/Themes/Anzim/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/Themes/Anzim/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>
    <script src="~/Themes/Anzim/vendor/vide/vide.min.js"></script>
    <script src="~/Themes/Anzim/js/custom.js"></script>

    <!-- Theme Base, Components and Settings -->
    <script src="~/Themes/Anzim/js/theme.js"></script>

    <!-- Current Page Vendor and Views -->
    <script src="~/Themes/Anzim/js/views/view.contact.js"></script>

    <!-- Current Page Vendor and Views -->
    <script src="~/Themes/Anzim/vendor/rs-plugin/js/jquery.themepunch.tools.min.js"></script>
    <script src="~/Themes/Anzim/vendor/rs-plugin/js/jquery.themepunch.revolution.min.js"></script>

    <!-- Theme Custom -->
    <script src="~/Themes/Anzim/js/custom.js"></script>

