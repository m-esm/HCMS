<body>

    <div class="body">
        <header id="header" class="header-narrow header-semi-transparent" data-plugin-options="{'stickyEnabled': true, 'stickyEnableOnBoxed': true, 'stickyEnableOnMobile': true, 'stickyStartAt': 1, 'stickySetTop': '0'}">
            <div class="header-body">
                <div class="header-container container">
                    <div class="header-row">
                        <div class="header-column">
                            <div class="header-logo">
                                <a href="/">
                                    <img alt="@ViewBag.title" src="~/Themes/Anzim/img/logo.png">

                                </a>
                            </div>
                        </div>
                        <div class="header-column">
                            <div class="header-row">
                                <div class="header-nav header-nav-stripe">
                                    <button class="btn header-btn-collapse-nav" data-toggle="collapse" data-target=".header-nav-main">
                                        <i class="fa fa-bars"></i>
                                    </button>

                                    <ul class="header-social-icons social-icons hidden-xs">
                                        @*  <li class=""><a href="#" target="_blank" title="Facebook"><i class="fa fa-facebook"></i></a></li>*@
                                        <li class=""><a href="@phrases.Get("contact_instagram")" target="_blank" title="instagram"><i class="fa fa-instagram"></i></a></li>
                                        <li class=""><a href="@phrases.Get("contact_telegram")" target="_blank" title="Telegram"><i class="fa fa-telegram"></i></a></li>
                                    </ul>
                                    <a class="testcenter" target="_blank" href="http://exams.onanzim.ir">
                                        مرکز آزمون
                                    </a>
                                    <div class="header-nav-main header-nav-main-square header-nav-main-effect-2 header-nav-main-sub-effect-1 collapse">
                                        <nav>
                                            <ul class="nav nav-pills" id="mainNav">
                                                <li class="active">
                                                    <a href="/">
                                                        خانه
                                                    </a>
                                                </li>

                                                <li>
                                                    <a href="#">
                                                        آزمون&zwnj;ها
                                                    </a>
                                                    <ul>
                                                        @foreach (var item in degrees)
                                                        {
                                                            <li>
                                                                <a href="/degrees?rid=@item.RowID">
                                                                    @item.GetValue("title")
                                                                </a>
                                                            </li>
                                                        }

                                                    </ul>
                                                </li>


                                                <li>
                                                    <a href="/faq">
                                                        سوالات متداول
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="/weblog">
                                                        وبلاگ
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="/coop">
                                                        همکاری با ما
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="/contact">
                                                        تماس با ما
                                                    </a>
                                                </li>





                                            </ul>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div role="main" class="main">
            @if (ViewContext.RouteData.Values["viewname"].ToString() != "post")
            {
                if (banners.Any(p => p.GetValue("page").Value == ViewContext.RouteData.Values["viewname"].ToString()))
                {
                    var bn = banners.First(p => p.GetValue("page").Value == ViewContext.RouteData.Values["viewname"].ToString());
                    <div id="page_banner">
                        <div class="banner-container">
                            <img src="@bn.GetValue(" image")" />
                        </div>
                    </div>
                }
                else
                {

                    <div id="carousel-slider" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        @*<ol class="carousel-indicators">
                                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                            </ol>*@

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            @{
                                var slideIndex = 0;
                            }
                            @foreach (var bn in banners.Where(p => p.GetValue("page").Value == "").OrderBy(p => p.GetValue("orderid").Value))
                            {



                                <div class="item @(slideIndex == 0 ? "active":"")">
                                    <img src="@bn.GetValue("image")" alt="">
                                    <div class="carousel-caption">
                                        @if (!string.IsNullOrWhiteSpace(bn.GetValue("title").Value))
                                        {
                                            <h1>@bn.GetValue("title")</h1>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(bn.GetValue("linkText").Value))
                                        {
                                            <a href="@bn.GetValue("link")">
                                                @bn.GetValue("linkText")
                                            </a>
                                        }
                                    </div>
                                </div>
                                slideIndex++;

                            }


                        </div>

                        <!-- Controls -->
                        <a class="left carousel-control" href="#carousel-slider" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#carousel-slider" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                                    }
                                }
            @RenderBody()


        </div>

        <footer class="short" id="footer">
            <div class="container">
                <div class="row">


                    <div class="col-sm-3  col-sm-offset-3  ">
                        <h5 class="mb-sm">
                            <i class="fa fa-envelope text-color-primary"></i>   ایمیل :
                        </h5>

                        <span class="footer-email-custom"> <a href="mailto:@phrases.Get("contact_email")">@phrases.Get("contact_email")</a></span>

                    </div>


                    <div class="col-sm-3  align-right">
                        <h5 class="mb-sm">
                            <i class="fa fa-phone text-color-primary"></i>
                            شماره تماس :
                        </h5>
                        <span class="footer-email-custom phone font-size-sm ltr">@phrases.Get("contact_phone")</span>
                    </div>


                    <div class="col-sm-3  align-right">
                        <h5 class="mb-sm">
                            <i class="fa fa-map-marker text-color-primary"></i>
                            آدرس :
                        </h5>
                        <span class="footer-email-custom address font-size-sm">@phrases.Get("contact_address")</span>

                    </div>



                </div>
                <div class="row">
                    <div class="col-md-12">
                        <hr class="solid">
                        <div class="row">

                            <div class="col-md-6">

                                <ul class="social-icons pull-left">
                                    <li class=""><a href="@phrases.Get("contact_instagram")" target="_blank" title="instagram"><i class="fa fa-instagram"></i></a></li>
                                    <li class=""><a href="@phrases.Get("contact_telegram")" target="_blank" title="Telegram"><i class="fa fa-telegram"></i></a></li>
                                </ul>

                                <span class="text-color-primary pull-left">
                                    ما را در شبکه&zwnj;های اجتماعی دنبال کنید!
                                </span>

                            </div>

                            <div class="col-md-6">
                                <p>© تمامی حقوق برای وبسایت آنزیم محفوظ است.</p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

