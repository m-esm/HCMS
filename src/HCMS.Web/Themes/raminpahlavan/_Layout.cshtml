    <script src="~/themes/raminpahlavan/vendors/bower_components/mixitup/dist/mixitup.min.js"></script>
    <script src="~/themes/raminpahlavan/vendors/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/themes/raminpahlavan/js/webapp.js?v=@DateTime.Now.Ticks"></script>
</body>
</html>