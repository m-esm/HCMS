<section id="signup" class="page page-homeforms first">
    <div class="container">

        <div class="row">

            <div class="col-md-6 col-sm-6">
                <h3 class="title" data-aos="fade-down">
                    ثبت نام
                    خریدار
                </h3>

                <form method="post" class="register-form" action="/fa-ir/manage/Auth/register">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    <input type="hidden" name="isAjax" value="true" />
                    <input type="hidden" name="loginAfterReg" value="true" />
                    <input type="hidden" name="sendNotificationAfterReg" value="true" />
                    <input type="hidden" name="ReturnUrl" value="/" />
                    <input type="email" style="display: none;" />
                    <input type="password" style="display: none;" />
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label class="required">
                                نام کاربری
                                (
                                <i class="fa fa-at"></i>
                                ایمیل
                                <i class="fa fa-mobile-phone"></i>

                                یا شماره همراه
                                )

                            </label>

                            <input required name="Username" is-not-persian-checked  class="form-control" type="text" placeholder="ایمیل یا شماره همراه" />
                        </div>
                    </div>

                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label class="required">
                                <i class="fa fa-user"></i>
                                نام و نام خانوادگی
                            </label>
                            <input required name="FirstName" class="form-control" type="text" placeholder="نام و نام خانوادگی" />
                        </div>
                    </div>


                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label class="required">
                                <i class="fa fa-key"></i>
                                رمز عبور
                            </label>
                            <input required name="password" is-not-persian-checked  class="form-control" type="password" placeholder="رمز عبور" />
                        </div>
                    </div>

                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label class="required">
                                <i class="fa fa-key"></i>
                                تکرار رمز عبور

                            </label>
                            <input name="ConfirmPassword" is-not-persian-checked  required class="form-control" type="password" placeholder="تکرار رمز عبور" />
                        </div>
                    </div>

                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group captcha-field">
                            <img src="~/manage/Captcha/msdn?prefix=captcha" />
                            <input class="captcha form-control" autocomplete="off" required type="number" name="captcha" placeholder="کد امنیتی را وارد کنید ..." />
                        </div>
                    </div>

                    <button class="hayatbtn" type="button">
                        <i class="fa fa-check">
                        </i>
                        ثبت نام
                    </button>
                </form>

            </div>


            <div class="col-md-6 col-sm-6">

                <h3 class="title" data-aos="fade-down">فرم ثبت نام همکاری</h3>



                <div class="form">
                    <form action="/fa-ir/manage/Auth/RegisterByRole" method="post" role="form" class="contactForm register-by-role">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()
                        <input type="hidden" name="loginAfterReg" value="true" />
                        <input type="hidden" name="sendNotificationAfterReg" value="true" />
                        <input type="hidden" name="isAjax" value="true" />
                        <input type="hidden" name="ReturnUrl" value="/" />
                        <input type="email" style="display: none;" />

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">

                                <label class="hide-990px">
                                    <i class="fa fa-cube"></i>
                                    نوع همکاری
                                </label>
                                <select required name="role" class="form-control">
                                    <option>لطفا انتخاب کنید</option>
                                    <option value="employ">استخدام</option>
                                    <option value="colleague">همراهان (تامین کنندگان و پیمانکاران)</option>
                                    <option value="investment">سرمایه گذاران</option>

                                </select>
                            </div>
                        </div>

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <input type="text" required name="FirstName" class="form-control" placeholder="نام و نام خانوادگی" />

                            </div>
                        </div>

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <input type="email" is-not-persian-checked  required class="form-control" name="username" placeholder="آدرس پست الکترونیکی" />

                            </div>
                        </div>

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <input type="text" required class="form-control" name="phone" placeholder="شماره همراه" />

                            </div>
                        </div>

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">

                                <input name="Password" is-not-persian-checked  required placeholder="رمز عبور" class="form-control" type="password" />
                            </div>
                        </div>

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">

                                <input name="ConfirmPassword" is-not-persian-checked required placeholder="تکرار رمز عبور" class="form-control" type="password" />
                            </div>
                        </div>

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group captcha-field">
                                <img src="~/manage/Captcha/msdn?prefix=_cooprate" id="_cooprate-captcha-image" />
                                <input class="captcha form-control" autocomplete="off" required type="number" name="captcha" placeholder="کد امنیتی را وارد کنید ..." />
                            </div>
                        </div>

                        <button class="hayatbtn" type="button">
                            <i class="fa fa-send">
                            </i>
                            ارسال
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>


