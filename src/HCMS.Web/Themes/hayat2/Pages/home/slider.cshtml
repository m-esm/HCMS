@using HCMS.Dynamics.Data
@{
    var sliders = DDB.GetTable("cms", "slider").DRows;
    var mobileSlider = DDB.GetTable("cms", "slider-mobile").DRows;
    var sotitr = DDB.GetTable("cms", "sotitr").DRows.FirstOrDefault();

}
<section id="home" class="page page-slider">

   


    <div id="slider" class="slider hidden-mobile">

        @foreach (var item in sliders)
        {
            <div class="slide">
                <img src="@item.GetValue("image")" />
            </div>
        }

    </div>

    <div id="slider-mobile" class="slider show-mobile">

        @foreach (var item in mobileSlider)
        {
            <div class="mobile">
                <img src="@item.GetValue("image")" />
            </div>
        }

    </div>




    <div class="logo-hayat-no">
        <img src="~/Themes/hayat2/img/logo/Hayate no Logo white.png" />
        <h4>@sotitr.GetValue("title")</h4>
        <h5>@sotitr.GetValue("descrp")</h5>
    </div>


</section>
