@model IEnumerable<HCMS.Dynamics.Data.DRow>

    <div class="">
        <div class="table cscroll">
            <table class="table table-bordered">

                <thead>
                    <tr>
                        <th>نام واحد</th>
                        <th>متراژ</th>
                        <th>طبقه</th>
                        <th>واحد</th>
                        <th>اتاق</th>
                        <th>امتیاز</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody class="">
                    @foreach (var item in Model)
                    {
                        var unitName = item.GetValue("name").Value.Replace("block", "b").ToUpper();
                        var _id = item.GetValue("Floor") + "-" + item.GetValue("Unit");
                        <tr class="" id="@_id" data-area="@item.GetValue("area")">
                            <td>@unitName</td>
                            <td> @item.GetValue("area")</td>
                            <td> @item.GetValue("Floor")</td>
                            <td> @item.GetValue("Unit")</td>
                            <td> @item.GetValue("rooms")</td>
                            <td> - </td>
                            <td>
                                <a class="hayatbtn hayatbtn-sm" href="/units/#@item.GetValue("name").Value.Replace("-","_")">
                                    <i class="fa fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>


            </table>
        </div>

    </div>