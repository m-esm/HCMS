@using HCMS.Business.Auth
@using HCMS.Web.Areas.Manage.Models
@using HCMS.Data;
@using HCMS.Business;
@using HCMS.Dynamics.Tools
@using HCMS.Dynamics.Data
@using System.Collections.Specialized
@using MoreLinq

@{


    if (!User.Identity.IsAuthenticated)
    {
        Response.Redirect("/auth");
    }

    var user = new HCMS.Data.Identity.ApplicationDbContext().Users.FirstOrDefault(p => p.UserName == User.Identity.Name);

    var types = DDB.GetTable("cms", "units").DRows.Select(p => p.GetValue("area").Value).DistinctBy(p => p).OrderBy(p=>p);


}


<section id="submit" class="page page-homeforms">
    <div class="container">

        <div class="row">

            <div class="col-md-6 col-md-offset-3">

                <h3 data-aos="fade-down">فرم ثبت نام رزرو بازدید</h3>

                <div class="form">
                    <form action="/submit_cooprate" method="post" role="form" class="contactForm">

                        <div class="row">

                            <div data-aos="fade-left" class="form-group">

                                <label>
                                    <i class="fa fa-cubes"></i>
                                    نوع واحد
                                </label>
                                <select required name="type" class="form-control">
                                    <option></option>
                                   @foreach (var item in types)
                                   {
                                    <option value="@item">
                                        واحد @item
                                        متری
                                    </option>
                                   }

                                </select>
                            </div>


                            <div data-aos="fade-left" class="form-group">

                                <label>
                                    <i class="fa fa-question"></i>
                                    قیمت مورد نظر
                                </label>

                                <select required name="type" class="form-control">
                                    <option></option>
                                    <option>
                                        از متری 9  تا 9.5
                                        میلیون تومان

                                    </option>
                                    <option>
                                        
                                        از متری 9.5  تا 10
                                        میلیون تومان

                                    </option>
                                    <option>
                                        از متری 10  تا 10.5
                                        میلیون تومان
                                    </option>

                                </select>
                            </div>


                            <div data-aos="fade-left" class="form-group">

                                <label>
                                    <i class="fa fa-user"></i>
                                    نام و نام خانوادگی
                                </label>
                                <input type="text" required name="name" class="form-control" value="@user.FirstName @user.LastName" placeholder="نام و نام خانوادگی" />

                            </div>

                            <div data-aos="fade-left" class="form-group">

                                <label>
                                    <i class="fa fa-mobile-phone"></i>
                                    شماره همراه
                                </label>
                                <input type="text" required class="form-control" name="phone" value="@user.Mobile" placeholder="شماره همراه" />

                            </div>

                            <div data-aos="fade-left" class="form-group">

                                <label>
                                    <i class="fa fa-at"></i>
                                   ایمیل
                                </label>
                                <input type="text" required class="form-control" name="email" value="@user.Email" placeholder="شماره همراه" />

                            </div>

                            <div data-aos="fade-left" class="form-group captcha-field">
                                <img src="~/manage/Captcha/msdn?prefix=_cooprate" id="captcha-image" />
                                <input class="captcha form-control" autocomplete="off" required type="text" name="captcha" placeholder="کد امنیتی را وارد کنید ..." />
                            </div>

                        </div>



                        <button data-aos="fade-left" class="hayatbtn" type="submit">
                            <i class="fa fa-send">
                            </i>
                            ارسال
                        </button>
                    </form>
                </div>
            </div>




        </div>
    </div>
</section>
