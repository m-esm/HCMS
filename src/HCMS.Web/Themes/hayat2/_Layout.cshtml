@using HCMS.Dynamics.Data
@{
    var menu = DDB.GetTable("cms", "menu").DRows;

}
<!DOCTYPE html>
<html lang="fa">

<head>

    <base href="~/" />
    <meta charset="utf-8" />
    <title>حیات نو | @ViewBag.title </title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />

    <!-- Facebook Opengraph integration: https://developers.facebook.com/docs/sharing/opengraph -->
    <meta property="og:title" content="" />
    <meta property="og:image" content="" />
    <meta property="og:url" content="" />
    <meta property="og:site_name" content="" />
    <meta property="og:description" content="" />

    <!-- Twitter Cards integration: https://dev.twitter.com/cards/  -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="" />
    <meta name="twitter:title" content="" />
    <meta name="twitter:description" content="" />
    <meta name="twitter:image" content="" />

    <!-- Place your favicon.ico and apple-touch-icon.png in the template root directory -->
    <link href="favicon.ico" rel="shortcut icon">



    <!-- reset css defaults -->
    <link href="~/Themes/hayat2/lib/resetcss/reset.min.css" rel="stylesheet" />


    <!-- Bootstrap CSS File -->
    <link href="~/Themes/hayat2/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Themes/hayat2/lib/bootstrap-rtl/css/bootstrap-rtl.min.css" rel="stylesheet" />


    <!-- Libraries CSS Files -->
    <link href="~/Themes/hayat2/lib/animate-css/animate.min.css" rel="stylesheet" />
    <link href="~/Themes/hayat2/lib/aos/aos.min.css" rel="stylesheet" />


    <!-- hayat styles -->
    <link href="~/Themes/hayat2/css/all.css" rel="stylesheet" />
    <script src="~/Themes/hayat2/lib/underscore/underscore.min.js"></script>
    <script src="~/Themes/hayat2/lib/async/async.min.js"></script>
    <script src="~/Themes/hayat2/lib/aos/aos.min.js"></script>

    <script src="~/Themes/hayat2/lib/jquery/jquery.min.js"></script>
    <script src="~/Themes/hayat2/js/logo.js"></script>

    <link href="~/Themes/hayat2/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

</head>

<body>

    <div id="loader">
        <div class="logo-wrapper">
            <div class="logobox">
            </div>
        </div>
    </div>


    <header>

        <div class="logo">
            <img src="~/Themes/hayat2/img/logo/Ebtekar Saze Samle Logo.png" />
        </div>

        <a href="~/" class="homelogo">
            <img src="~/Themes/hayat2/img/logo/Hayate no Logo black.png" />
        </a>

        <div class="links">
            <ul>
                <li>
                    <span>
                        رزرو بازدید
                    </span>
                    <i class="fa fa-calendar"></i>
                </li>

                <li>
                    <span class="ltr email">
                        info@hayat-no.com
                    </span>
                    <i class="fa fa-envelope"></i>
                </li>


                <li>
                    <span class="ltr phone">
                        021 2290 4055
                    </span>
                    <i class="fa fa-phone-square"></i>
                </li>
            </ul>
        </div>
        <nav>
            <ul>

                @foreach (var item in menu)
                {

                    <li>
                        <a href="@item.GetValue("url")">
                            @item.GetValue("name")

                        </a>

                        @if (!string.IsNullOrWhiteSpace(item.GetValue("text").Value))
                        {
                            <div class="child-menu">
                                @Html.Raw(item.GetValue("text").Value.Replace(Environment.NewLine, "<br />"))

                            </div>

                        }

                    </li>

                }

            </ul>

        </nav>

    </header>




    @RenderBody()




    <div class="back-to-top"><i class="fa fa-chevron-up"></i></div>




    <!-- Required JavaScript Libraries -->


  
    <script src="~/Themes/hayat2/lib/bootstrap/js/bootstrap.min.js"></script>


    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB1YnR95LCRaznjcExHiMVSS6mt8GJXiks&callback=initMap">
    </script>

    <script src="~/Themes/hayat2/js/hayat.js"></script>


    <!-- hayat JS Bundle -->






</body>

</html>
