    <header class="hidden-mobile">

        <div class="logo">
            <img src="~/Themes/hayat2/img/logo/Ebtekar Saze Samle Logo.png" />
        </div>

        <a href="~/" class="homelogo" title="بازگشت به صفحه اصلی">
            <img src="~/Themes/hayat2/img/logo/Hayate no Logo black.png" />
        </a>

        <div class="links">
            <ul>
                <li>
                    <a href="/visit">
                        <i class="fa fa-calendar"></i>
                        <span>
                            رزرو بازدید
                        </span>
                    </a>
                </li>

                <li>
                    <i class="fa fa-envelope"></i>
                    <span class="ltr email">
                        info@hayat-no.com
                    </span>
                </li>


                <li>
                    <i class="fa fa-phone-square"></i>
                    <span class="ltr phone">
                        021 2290 4055
                    </span>
                </li>
            </ul>
        </div>
        <nav>
            <ul>

                @foreach (var item in menu)
                {

                    <li>
                        <a href="@item.GetValue("url")">
                            @item.GetValue("name")

                        </a>

                        @if (!string.IsNullOrWhiteSpace(item.GetValue("text").Value))
                        {
                            <div class="child-menu">
                                @Html.Raw(item.GetValue("text").Value.Replace(Environment.NewLine, "<br />"))

                            </div>

                        }

                    </li>

                }

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="pull-left">
                        <a href="">
                            <i class="fa fa-user"></i>
                            @User.Identity.Name
                        </a>

                        <div class="child-menu">
                            <form action="/fa-ir/manage/auth/LogOff" method="post">
                                <button type="submit" class="btn btn-primary">خروج</button>
                            </form>
                        </div>
                    </li>
                }
                else
                {
                    <li class="pull-left">
                        <a href="/auth">
                            <i class="fa fa-user"></i>
                            ورود
                        </a>
                    </li>
                }

            </ul>

