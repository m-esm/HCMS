    <link href="~/Packages/sweetalert/sweetalert.css" rel="stylesheet" />
    <link href="~/Packages/bootstrap-3.3.6-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Packages/bootstrap-rtl/css/bootstrap-flipped.min.css" rel="stylesheet" />
    <link href="~/Packages/bootstrap-3.3.6-dist/css/bootstrap-theme.min.css" rel="stylesheet" />
