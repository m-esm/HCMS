@using System.Web.Optimization
@model HCMS.Web.Areas.Manage.Models.SendCodeViewModel
@{
    ViewBag.Title = "ارسال کد فعال سازی";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("SendCode", "Auth", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-8">
            Two Factor Authentication Provider:
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
