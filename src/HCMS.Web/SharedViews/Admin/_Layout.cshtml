<!DOCTYPE html>
@using HCMS.Business.Auth
@{
    var Phrases = (HCMS.Dynamics.Localization.Phrases)ViewBag.Phrases;
    var cc = Phrases.CurrentCulture.CultureName();



}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <title>@ViewBag.Title | @Phrases.Get("HCMS")</title>

    <link rel="stylesheet" type="text/css" href="~/Packages/bootstrap-3.3.6-dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Packages/bootstrap-3.3.6-dist/css/bootstrap-theme.min.css" />

    <link rel="stylesheet" type="text/css" href="~/Packages/font-awesome-4.6.3/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Packages/elFinder/css/elfinder.min.css">
    <link rel="stylesheet" type="text/css" href="~/Packages/sweetalert/sweetalert.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Packages/Trumbowyg/ui/trumbowyg.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Packages/melon/css/plugins.css" />
    <link rel="stylesheet" type="text/css" href="~/Packages/melon/css/responsive.css" />
    <link rel="stylesheet" type="text/css" href="~/Packages/melon/css/icons.css" />
    <link rel="stylesheet" type="text/css" href="~/Packages/melon/css/main.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Packages/melon/css/HappyStyle.min.css" />

    @if (Phrases.CurrentCulture.RTL)
    {
        <link rel="stylesheet" type="text/css" href="~/Packages/bootstrap-rtl/css/bootstrap-rtl.min.css" />
        <link rel="stylesheet" type="text/css" href="~/Packages/melon/css/main-rtl.min.css" />
        <link rel="stylesheet" type="text/css" href="~/Packages/melon/css/HappyStyle-rtl.min.css" />
    }

    @RenderSection("styles", false)

    <script type="text/javascript" src="~/Packages/jquery-2.1.4/jquery-2.1.4.min.js"></script>
    <script type="text/javascript" src="~/Packages/jquery.ui.1.9.0/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/Packages/bootstrap-3.3.6-dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Packages/sweetalert/sweetalert.min.js"></script>
    <script type="text/javascript" src="~/Packages/lodash/lodash.compat.min.js"></script>
    <!--[if lt IE 9]>
          <script  type="text/javascript" src="~/Packages/html5shiv-master/html5shiv.min.js"></script>
    <![endif]-->
    <!-- toch events -->
    <script type="text/javascript" src="~/Packages/jquery.ui.touch-punch/jquery.ui.touch-punch.min.js"></script>
    <script type="text/javascript" src="~/Packages/jquery.event.swipe/jquery.event.move.min.js"></script>
    <script type="text/javascript" src="~/Packages/jquery.event.swipe/jquery.event.swipe.min.js"></script>

    <!-- General -->
    <script type="text/javascript" src="~/Packages/breakpoints/breakpoints.min.js"></script>
    <script type="text/javascript" src="~/Packages/elFinder/js/elfinder.min.js"></script>
    <script type="text/javascript" src="~/Packages/respond/respond.min.js"></script>
    <script type="text/javascript" src="~/Packages/jquery.cookie/jquery.cookie.min.js"></script>
    <script type="text/javascript" src="~/Packages/slimscroll/jquery.slimscroll.min.js"></script>
    <script type="text/javascript" src="~/Packages/slimscroll/jquery.slimscroll.horizontal.min.js"></script>

    <!-- Charts -->
    <!--[if lt IE 9]>
           <script type="text/javascript" src="~/Packages/jquery.flot/excanvas.min.js"></script>
    <![endif]-->
    <!-- Forms -->
    <script type="text/javascript" src="~/Packages/jquery.uniform/jquery.uniform.min.js"></script>
    <script type="text/javascript" src="~/Packages/select2/select2.min.js"></script>

    <script type="text/javascript" src="~/Packages/Trumbowyg/trumbowyg.min.js"></script>
    <!-- App -->
    <script type="text/javascript" src="~/Packages/melon/js/app.min.js"></script>
    <script type="text/javascript" src="~/Packages/melon/js/plugins.min.js"></script>
    <script type="text/javascript" src="~/Packages/melon/js/plugins.form-components.min.js"></script>
    <script type="text/javascript" src="~/Packages/HCMS/js/DStats.min.js"></script>
    <script>
        $(document).ready(function () {
            "use strict";
            App.init(); // Init layout and core plugins
            Plugins.init(); // Init all plugins


            FormComponents.init(); // Init all form-specific plugins
        });
    </script>
    <!-- HCMS -->


    <script type="text/javascript" src="~/Packages/jquery.inputmask/inputmask.min.js"></script>
    <script type="text/javascript" src="~/Packages/jquery.inputmask/inputmask.extensions.min.js"></script>
    <script type="text/javascript" src="~/Packages/jquery.inputmask/inputmask.numeric.extensions.min.js"></script>
    <script type="text/javascript" src="~/Packages/jquery.inputmask/inputmask.regex.extensions.min.js"></script>
    <script type="text/javascript" src="~/Packages/jquery.inputmask/inputmask.extensions.min.js"></script>
    <script type="text/javascript" src="~/Packages/jquery.inputmask/jquery.inputmask.min.js"></script>
    <script type="text/javascript" src="~/Packages/jquery.inputmask/jquery.maskMoney.min.js"></script>


    <script src="~/Packages/CKEditor/ckeditor.js"></script>
    <script src="~/Packages/CKEditor/jquery-adapter.js"></script>

    <script type="text/javascript" src="~/Packages/HCMS/js/Base.min.js"></script>
    <script type="text/javascript" src="~/Packages/HCMS/js/Base.Forms.min.js"></script>
    <script type="text/javascript" src="~/Packages/HCMS/js/Base.DateHelper.min.js"></script>
    <!-- /HCMS-->
    @RenderSection("scripts", false)

</head>
<body>


    <!-- Header -->
    <header class="header navbar navbar-fixed-top" role="banner">
        <!-- Top Navigation Bar -->
        <div class="melon-container">
            <!-- Only visible on smartphones, menu toggle -->
            <ul class="nav navbar-nav">
                <li class="nav-toggle"><a href="javascript:void(0);" title=""><i class="fa fa-bars"></i></a></li>
            </ul>
            <!-- Logo -->
            <a class="navbar-brand" href="~/">
                <img src="~/Packages/HCMS/img/happy-logo-bg-black128.png" alt="logo" />
                <span>   @Phrases.Get("HCMS")</span>

            </a>
            <!-- /logo -->
            <!-- Sidebar Toggler -->
            <a href="#" class="toggle-sidebar bs-tooltip" data-placement="bottom" data-original-title="@Phrases.Get("Toggle navigation")">
                <i class="fa fa-bars"></i>
            </a>
            <!-- /Sidebar Toggler -->
            <!-- Top Right Menu -->
            <ul class="nav navbar-nav navbar-right">

                <li class="dropdown cultures">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <!--<img alt="" src="~/Content/Melon/assets/img/avatar1_small.jpg" />-->
                        <img src="~/Packages/flags/@(Phrases.CurrentCulture.CountryNameAbbr.ToUpper()).png" /> @Phrases.CurrentCulture.LanguageNativeName
                        <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu">
                        @foreach (var item in Phrases.GetAllCultures().Where(p => p.ID != Phrases.CurrentCulture.ID))
                        {
                            string url = Request.Url.ToString().Replace(Phrases.CurrentCulture.CultureName(), item.CultureName());
                            if (!url.Contains(item.CultureName()))
                            {
                                url = Request.Url.GetLeftPart(UriPartial.Authority) + "/" + item.CultureName() + Request.Url.ToString().Replace(Request.Url.GetLeftPart(UriPartial.Authority), "");
                            }
                            <li>
                                <a href="@url">
                                    <img src="~/Packages/flags/@(item.CountryNameAbbr.ToUpper()).png" />
                                    @item.LanguageNativeName
                                </a>
                            </li>
                        }

                    </ul>

                </li>

                <!-- User Login Dropdown -->


                <li class="dropdown user">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <!--<img alt="" src="~/Content/Melon/assets/img/avatar1_small.jpg" />-->
                        <i class="fa fa-user"></i>
                        @*<span class="username en">@User.Identity.Name</span>*@
                        <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="~/manage/manage"><i class="fa fa-user"></i> @Phrases.Get("My Profile")</a></li>
                        <li class="divider"></li>
                        <li><a href="~/manage/auth/logoff"><i class="fa fa-sign-out"></i>@Phrases.Get("Log Out") </a></li>
                    </ul>
                </li>
                <!-- /user login dropdown -->
            </ul>
            <!-- /Top Right Menu -->
        </div>
        <!-- /top navigation bar -->
        <!--=== Project Switcher ===-->

    </header> <!-- /.header -->
    <div id="container">
        <div id="sidebar" class="sidebar-fixed">
            <div id="sidebar-content">


                <!--=== Navigation ===-->
                @Html.Partial("Admin/_sidebar")

                @*<div class="sidebar-widget">
                    <div class="btn-group" data-toggle="buttons" id="theme-switcher">
                        <label class="btn active">
                            <input type="radio" name="theme-switcher" data-theme="bright"><i class="fa fa-sun-o"></i> @Phrases.Get("Bright")
                        </label>
                        <label class="btn">
                            <input type="radio" name="theme-switcher" data-theme="dark"><i class="fa fa-moon-o"></i>@Phrases.Get("Dark")
                        </label>
                    </div>
                </div>*@
            </div>
            <div id="divider" class="resizeable"></div>
        </div>
        <!-- /Sidebar -->
        <div id="content">
            <div class="container">
                <!-- Breadcrumbs line -->
                <div class="crumbs">
                    <ul id="breadcrumbs" class="breadcrumb">
                        <li>
                            <i class="fa fa-angle-right"></i>
                            <a>@ViewBag.Title</a>
                        </li>

                    </ul>
                    <ul class="crumb-buttons">
                        <li>
                            <a href="~/"><i class="fa fa-angle-left"></i> @Phrases.Get("Back to website") </a>
                        </li>
                        <li class="dropdown">
                            <a href="#" title="" class="en" data-toggle="dropdown"><i class="fa fa-calendar"></i> @DateTime.Now.ToString("yyyy/MM/dd") , @DateTime.Now.ToString("m")  </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="#"><i class="fa fa-calendar"></i> @HCMS.Dynamics.Tools.m2s.miladi2shamsi(DateTime.Now)</a></li>
                            </ul>
                        </li>

                    </ul>
                </div>
                <!-- /Breadcrumbs line -->
                @RenderBody()
                <!-- /Page Content -->
            </div>
            <!-- /.container -->
        </div>
    </div>
</body>
</html> 