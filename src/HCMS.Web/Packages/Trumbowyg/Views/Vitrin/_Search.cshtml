@{
    Layout = null;
}



@using (Ajax.BeginForm("Ix", "Vitrin", new { plugin = "Vitrin" }, new AjaxOptions()
{
    HttpMethod = "Post",
    LoadingElementId = "loading",
    UpdateTargetId = "result",
    InsertionMode = InsertionMode.Replace
}))
{
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">S E A R C H</h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <div class="col-md-2">
                    Vitrin Name
                </div>
                <div class="col-md-10">
                    <input name="name" id="name" class="form-control"/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    Owner Name
                </div>
                <div class="col-md-10">
                    <input name="owner" id="owner" class="form-control" />
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <div class="form-group">
                <div class="col-md-2">
                    <div class="loader"></div>
                </div>
                <div class="col-md-2">
                    <input type="submit" value="Search" class="btn btn-primary"/>
                </div>
                <br />
            </div>
        </div>
    </div>
}

