
@model HCMS.Vitrin.Model.Vitrin
@{
    Layout = "~/SharedViews/Admin/_Layout.cshtml";

    ViewBag.Title = "حذف صنف";

}


<h2>@ViewBag.Title.</h2>

<h3>Are You Sur To Delete?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            Vitrin Name
        </dt>
        <dd>
            @Model.Name
        </dd>

        <dt>
            Owner Name
        </dt>
        <dd>
            @Model.Owner
        </dd>

        <dt>
            Descrp
        </dt>
        <dd>
            @Model.Descrp
        </dd>

        <dt>
            Block Count
        </dt>
        <dd>
            @Model.BlockCount
        </dd>

        <dt>
            Create Date
        </dt>
        <dd>
            @Model.CreateDate
        </dd>

        <dt>
            Banner Image
        </dt>       
        <dd>
            <img src="@Model.BannerImage" />
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back To List", "Index", new { plugin = "vitrin" }, new { @class = "btn btn-default" })
        </div>
    }
</div>