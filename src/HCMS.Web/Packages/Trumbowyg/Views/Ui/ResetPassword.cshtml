
@{
    var token = TempData["code"];
    var userId = TempData["userId"];
}

<div class="layout-container">

    <h1>
        ثبت رمز عبور جدید
    </h1>
    <form id="resetPassword-form" action="/fa-ir/manage/auth/ResetPassword">
        @Html.AntiForgeryToken()
        <input type="hidden" name="code" value="@token" />
        <input type="hidden" name="isAjax" value="true" />
        <input type="hidden" name="userId" value="@userId" />
        <div class="input-field">
            <label>رمز عبور </label> <input name="Password" required type="password" />
        </div>

        <div class="input-field">
            <label>تایید رمز عبور</label> <input name="confirmpassword" required type="password" />
        </div>


        <div class="input-field">
            <input type="submit" value="تایید" />
        </div>

    </form>
</div>