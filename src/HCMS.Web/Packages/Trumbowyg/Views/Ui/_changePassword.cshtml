@{
    Layout = null;
}

<form id="changePassword-form" action="/fa-ir/manage/manage/ChangePswd">
    @Html.AntiForgeryToken()

    <div class="input-field">
        <label>رمز عبور فعلی</label> <input name="currentpassword" required type="password" />
    </div>

    <div class="input-field">
        <label>رمز عبور جدید</label> <input name="newpassword" required type="password" />
    </div>

    <div class="input-field">
        <label>تایید رمز عبور</label> <input name="confirmpassword" required type="password" />
    </div>


    <div class="input-field">
        <input type="submit" value="تایید" />
    </div>

</form>
