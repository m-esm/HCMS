<div id="chat-modal">

    <div class="history-wrapper">
        <div class="close">X بستن</div>
        <h2>سوابق خرید</h2>
    </div>


    <div class="invoice-history-wrapper">
        <div class="close">X بستن</div>
        <h2>لیست فاکتورها</h2>

        <div class="invoices">

        </div>
    </div>


    <div class="settings-wrapper">
        <div class="close">X بستن</div>
        <h2>تنظیمات چت</h2>

        <div class="chat-settings">
            <h3>
                حریم شخصی
            </h3>
            <div class="input">
                <label>
                    <input id="public_name" type="checkbox" />
                    مشاهده نام برای همه
                </label>
            </div>

            <div class="input">
                <label>
                    <input id="public_pic" type="checkbox" />
                    مشاهده عکس پروفایل برای همه
                </label>
            </div>
            <h3>
                لیست افراد مسدود شده
            </h3>

            <ul class="block-list"></ul>

            <h3>
                انتخاب تصویر زمینه
            </h3>
            <ul class="chat-bgs"></ul>
        </div>


    </div>




    <div class="product-select-wrapper">
        <div class="close">X بستن</div>

        <h2>انتخاب کالا</h2>
        <div class="inner-content">
            <a class="btn btn-success done">
                <i class="glyphicon glyphicon-ok"></i>
                انجام شد !
            </a>
            <small>
                برای انتخاب کالا ها کافیست بر روی آنها کلیک کنید .
            </small>
            <div class="products">

            </div>
        </div>

    </div>

    <div class="modal-content">
        <div class="modal-body">

            <div id="chat-side">





                <h3>
                    اطلاعات کالا
                </h3>
                <div class="product-info">
                    @*@if (User.IsInRole("vitrin") == false)
                        {*@
                    <a id="select-product" class="btn btn-default">
                        <i class="glyphicon glyphicon-pushpin"></i>
                        انتخاب کالا
                    </a>
                    @*      }*@

                </div>

                @*<h3>
                        اطلاعات مخاطب
                    </h3>
                    <div class="chat-info">
