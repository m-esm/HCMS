                        </ul>
                    </div>*@

                <div class="others">

                    <a id="chat-settings" class="btn btn-default">
                        <i class="glyphicon glyphicon-cog"></i>
                        تنظیمات
                    </a>



                    <a id="invoice-history" class="btn btn-default">
                        <i class="glyphicon glyphicon-usd"></i>
                        لیست فاکتورها
                    </a>

                    @*<a id="chat-history" class="btn btn-default">
                            <i class="glyphicon glyphicon-align-justify"></i>
                            سوابق خرید
                        </a>*@

                    <a id="delete-chat" class="btn btn-default">

                        <i class="glyphicon glyphicon-trash"></i>
                        حذف  گفت و گو
                    </a>



                    <a id="report-chat" class="btn btn-default">

                        <i class="glyphicon glyphicon-warning-sign"></i>
                        گزارش سوء استفاده
                    </a>
                    <div class="report-chat">
                        <textarea placeholder="متن گزارش ..." class="report"></textarea>
                        <a class="send">
                            <i class="glyphicon glyphicon-ok"></i>
                        </a>
                    </div>

                    <a id="block-chat" class="btn btn-default">

                        <i class="glyphicon glyphicon-ban-circle"></i>
                        مسدود سازی کاربر
                    </a>



                </div>

            </div>
            <div id="chat-content" class="chat">


                <div class="chat-history">
                    <div class="chat-message">
                        <ul id="discussion" class="chat-message-content"></ul>
                    </div>
                </div> <!-- end chat-history -->
            </div> <!-- end chat -->
            <div id="chat-contacts">

                <div class="search">

                    <input type="search" placeholder="جست و جو ..." value="" />
                    <a id="go-search">
                        <i class="glyphicon glyphicon-search"></i>
                    </a>
                    <div class="clearfix"></div>

                </div>

                <ul class="contacts"></ul>

            </div>

            <div class="clearfix"></div>
        </div>
        <div class="modal-footer">
            <div class="text-area">
                <input type="text" rows="2" cols="50" dir="auto" id="message" placeholder="..." autofocus />
                <div class="attach">
                    <form class="attach-form">
                        <input name="attach-file" id="attach-file" type="file" />
                    </form>
                    <i class="glyphicon glyphicon-paperclip"></i>
                </div>
            </div>
            <a id="sendmessage">
                <i class="glyphicon glyphicon-send"></i>
                ارسال
