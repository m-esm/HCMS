@using PagedList.Mvc
@model PagedList.IPagedList<HCMS.Data.Identity.ApplicationUser>

@{

    int i = Model.FirstItemOnPage;

}

@*<link href="~/Packages/bootstrap-3.3.6-dist/css/bootstrap.min.css" rel="stylesheet" />
@if (phrases.CurrentCulture.RTL)
{
    
    <link href="~/Packages/bootstrap-rtl/css/bootstrap-rtl.min.css" rel="stylesheet" />
}*@

@Html.ValidationSummary(true)
<h1>@ViewBag.Title</h1>

@if (Model != null)
{
    if (Model.Count == 0)
    {
        <div>موردی یافت نشد.</div>
    }
    else
    {
        <table class="table table-bordered table-hover table-striped">
            <thead>
            <tr>
                <td>#</td>
                <td>نام</td>
                <td>نام خانوادگی</td>
                <td>کد ملی</td>
                <td>تلفن</td>
                <td>ایمیل</td>
                <td>آدرس</td>
                <td></td>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>@i</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.NationalCode</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>
                        <a href="~/vitrin/register/VitrinRequestDetails/@item.Id" class="btn btn-info">Show</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    @Html.PagedListPager(Model, page => Url.Action("VitrinRequestIx","Register", new { page, plugin = "Vitrin" }))
    }
}








